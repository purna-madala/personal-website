---
export interface Props {
  currentCategory?: 'all' | 'personal' | 'cooking';
}

const { currentCategory = 'all' } = Astro.props;
---

<div class="category-filter">
  <h3 class="filter-title">Categories</h3>
  <div class="filter-buttons">
    <a 
      href="/blog" 
      class={`filter-button ${currentCategory === 'all' ? 'active' : ''}`}
      aria-current={currentCategory === 'all' ? 'page' : undefined}
    >
      <svg class="icon" viewBox="0 0 20 20" fill="currentColor">
        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      All Posts
    </a>
    
    <a 
      href="/blog/personal" 
      class={`filter-button ${currentCategory === 'personal' ? 'active' : ''}`}
      aria-current={currentCategory === 'personal' ? 'page' : undefined}
    >
      <svg class="icon" viewBox="0 0 20 20" fill="currentColor">
        <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
      </svg>
      Personal
    </a>
    
    <a 
      href="/blog/cooking" 
      class={`filter-button ${currentCategory === 'cooking' ? 'active' : ''}`}
      aria-current={currentCategory === 'cooking' ? 'page' : undefined}
    >
      <svg class="icon" viewBox="0 0 20 20" fill="currentColor">
        <path d="M3 5a2 2 0 012-2h10a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2V5zM5 4a1 1 0 000 2h10a1 1 0 100-2H5z"/>
      </svg>
      Cooking
    </a>
  </div>
</div>

<style>
  .category-filter {
    margin-bottom: 2rem;
  }
  
  .filter-title {
    margin: 0 0 1rem 0;
    font-size: 1.125rem;
    font-weight: 600;
    color: #1f2937;
  }
  
  .filter-buttons {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
  
  .filter-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    background-color: white;
    color: #6b7280;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .filter-button:hover {
    border-color: #d1d5db;
    background-color: #f9fafb;
    color: #374151;
  }
  
  .filter-button.active {
    border-color: #3b82f6;
    background-color: #3b82f6;
    color: white;
  }
  
  .filter-button.active:hover {
    border-color: #2563eb;
    background-color: #2563eb;
  }
  
  .icon {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }
  
  @media (max-width: 640px) {
    .filter-buttons {
      flex-direction: column;
    }
    
    .filter-button {
      justify-content: center;
      text-align: center;
    }
  }
</style> 