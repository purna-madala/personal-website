---
export interface Props {
  currentCategory?: 'all' | 'personal' | 'cooking';
}

const { currentCategory = 'all' } = Astro.props;

const categories = [
  { id: 'all', label: 'All Posts', href: '/blog', icon: 'üìù', count: null },
  { id: 'personal', label: 'Personal', href: '/blog/personal', icon: 'üí≠', count: null },
  { id: 'cooking', label: 'Cooking', href: '/blog/cooking', icon: 'üç≥', count: null }
];
---

<section class="filter-section">
  <div class="filter-header">
    <h2 class="filter-title">Browse Categories</h2>
    <p class="filter-subtitle">Explore different types of content</p>
  </div>
  
  <nav class="category-nav" role="navigation" aria-label="Blog categories">
    <div class="category-grid">
      {categories.map((category) => (
        <a 
          href={category.href}
          class={`category-card ${currentCategory === category.id ? 'active' : ''}`}
          aria-current={currentCategory === category.id ? 'page' : undefined}
        >
          <div class="category-icon">{category.icon}</div>
          <div class="category-content">
            <h3 class="category-label">{category.label}</h3>
            <p class="category-description">
              {category.id === 'all' && 'All posts from every category'}
              {category.id === 'personal' && 'Thoughts, insights & experiences'}
              {category.id === 'cooking' && 'Recipes & culinary adventures'}
            </p>
          </div>
          <div class="category-arrow">‚Üí</div>
        </a>
      ))}
    </div>
  </nav>
</section>

<style>
  .filter-section {
    margin: var(--space-3xl) auto var(--space-2xl);
    max-width: 800px;
  }
  
  .filter-header {
    text-align: center;
    margin-bottom: var(--space-xl);
  }
  
  .filter-title {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text);
    margin-bottom: var(--space-sm);
    letter-spacing: var(--letter-spacing-tight);
  }
  
  .filter-subtitle {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    margin: 0;
  }
  
  .category-nav {
    position: relative;
  }
  
  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: var(--space-lg);
  }
  
  .category-card {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-lg);
    background: var(--color-surface);
    border: 2px solid var(--color-border);
    border-radius: var(--border-radius-xl);
    text-decoration: none;
    transition: all var(--transition-all);
    position: relative;
    overflow: hidden;
    cursor: pointer;
  }
  
  .category-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--gradient-primary);
    opacity: 0;
    transition: opacity var(--transition-all);
    z-index: 0;
  }
  
  .category-card:hover::before {
    opacity: 0.05;
  }
  
  .category-card:hover {
    transform: translateY(-2px);
    border-color: var(--color-primary);
    box-shadow: var(--shadow-lg);
  }
  
  .category-card.active {
    border-color: var(--color-primary);
    background: linear-gradient(135deg, 
      rgba(37, 99, 235, 0.1) 0%, 
      rgba(37, 99, 235, 0.05) 100%);
    box-shadow: var(--shadow-primary);
  }
  
  .category-card.active::before {
    opacity: 0.1;
  }
  
  .category-icon {
    font-size: var(--font-size-2xl);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--color-background-secondary);
    border-radius: var(--border-radius-lg);
    flex-shrink: 0;
    position: relative;
    z-index: 1;
    transition: all var(--transition-all);
  }
  
  .category-card:hover .category-icon {
    background: var(--color-primary-50);
    transform: scale(1.1);
  }
  
  .category-card.active .category-icon {
    background: var(--color-primary-50);
    box-shadow: 0 0 0 2px var(--color-primary-200);
  }
  
  .category-content {
    flex: 1;
    position: relative;
    z-index: 1;
  }
  
  .category-label {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
    margin: 0 0 var(--space-xs) 0;
    transition: color var(--transition-all);
  }
  
  .category-description {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: var(--line-height-normal);
  }
  
  .category-arrow {
    font-size: var(--font-size-lg);
    color: var(--color-text-tertiary);
    opacity: 0;
    transform: translateX(-10px);
    transition: all var(--transition-all);
    position: relative;
    z-index: 1;
  }
  
  .category-card:hover .category-arrow {
    opacity: 1;
    transform: translateX(0);
    color: var(--color-primary);
  }
  
  .category-card.active .category-arrow {
    opacity: 1;
    transform: translateX(0);
    color: var(--color-primary);
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .filter-section {
      margin: var(--space-2xl) auto var(--space-xl);
    }
    
    .category-grid {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }
    
    .category-card {
      padding: var(--space-md);
    }
    
    .category-icon {
      width: 40px;
      height: 40px;
      font-size: var(--font-size-xl);
    }
    
    .filter-title {
      font-size: var(--font-size-xl);
    }
  }
  
  @media (max-width: 480px) {
    .category-card {
      padding: var(--space-sm) var(--space-md);
    }
    
    .category-label {
      font-size: var(--font-size-base);
    }
    
    .category-description {
      font-size: var(--font-size-xs);
    }
  }
</style> 