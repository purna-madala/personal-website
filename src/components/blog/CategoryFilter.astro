---
export interface Props {
  currentCategory?: 'all' | 'personal' | 'cooking';
}

const { currentCategory = 'all' } = Astro.props;
---

<div class="category-filter">
  <div class="filter-buttons">
    <a 
      href="/blog" 
      class={`filter-button ${currentCategory === 'all' ? 'active' : ''}`}
      aria-current={currentCategory === 'all' ? 'page' : undefined}
    >
      All Posts
    </a>
    
    <a 
      href="/blog/personal" 
      class={`filter-button ${currentCategory === 'personal' ? 'active' : ''}`}
      aria-current={currentCategory === 'personal' ? 'page' : undefined}
    >
      Personal
    </a>
    
    <a 
      href="/blog/cooking" 
      class={`filter-button ${currentCategory === 'cooking' ? 'active' : ''}`}
      aria-current={currentCategory === 'cooking' ? 'page' : undefined}
    >
      Cooking
    </a>
  </div>
</div>

<style>
  .category-filter {
    margin-bottom: var(--space-2xl);
    display: flex;
    justify-content: center;
  }
  
  .filter-buttons {
    display: inline-flex;
    background-color: var(--color-background-soft);
    border-radius: var(--border-radius-lg);
    padding: var(--space-xs);
    gap: var(--space-xs);
  }
  
  .filter-button {
    display: inline-flex;
    align-items: center;
    padding: var(--space-sm) var(--space-lg);
    border-radius: var(--border-radius-md);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-light);
    text-decoration: none;
    transition: all var(--transition-fast);
    position: relative;
  }
  
  .filter-button:hover {
    color: var(--color-text);
    background-color: var(--color-background);
  }
  
  .filter-button.active {
    color: var(--color-text);
    background-color: var(--color-background);
    box-shadow: var(--shadow-sm);
  }
  
  @media (max-width: 640px) {
    .filter-buttons {
      width: 100%;
      justify-content: stretch;
    }
    
    .filter-button {
      flex: 1;
      justify-content: center;
      padding: var(--space-md) var(--space-sm);
    }
  }
</style> 